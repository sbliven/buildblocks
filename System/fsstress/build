#!/usr/bin/env modbuild

# :FIXME: needs review

pbuild::configure() {
	:
}

pbuild::compile() {
        cd "${SRC_DIR}"

	make -j ${JOBS}
}

pbuild::install() {
        cd "${SRC_DIR}"
	mkdir -p ${PREFIX}/bin
	install -m 0755 fsstress "${PREFIX}/bin"
}

#pbuild::supported_os 'Linux'
pbuild::add_to_group 'System'
pbuild::set_build_dependencies "${COMPILER}"
pbuild::make_all
