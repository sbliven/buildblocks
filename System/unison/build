#!/usr/bin/env modbuild

# :FIXME: needs review

pbuild::configure() {
	:
}

pbuild::compile() {
	cd "${SRC_DIR}"
	make
}

pbuild::install() {
	cd "${SRC_DIR}"
	install -m 0755 -d "${PREFIX}/bin"
	install -m 0755 unison "${PREFIX}/bin"
}

pbuild::add_to_group 'System'
pbuild::install_docfiles 'BUGS.txt' 'CONTRIB' 'COPYING' 'NEWS' 'README'
pbuild::make_all

# Local Variables:
# mode: sh
# sh-basic-offset: 8
# tab-width: 8
# End:
