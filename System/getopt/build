#!/usr/bin/env modbuild

pbuild::configure() {
	:
}

pbuild::compile() {
	case ${OS} in
		Linux )
			declare -x LDFLAGS="-lintl"
			;;
		Darwin )
			declare -x LDFLAGS="-lintl -liconv -framework CoreFoundation"
			;;
	esac

	make -e all
}

pbuild::install() {
	declare -x DESTDIR="${PREFIX}"
	declare -x prefix=''
	make -e install
}

pbuild::cleanup_build() {
	make -e realclean
}

# Local Variables:
# mode: sh
# sh-basic-offset: 8
# tab-width: 8
# End:
