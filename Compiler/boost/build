#!/usr/bin/env modbuild

BOOST_BUILD_PATH="${MODULE_BUILDDIR}"

pbuild::configure() {
	cd "${MODULE_SRCDIR}"
	"${MODULE_SRCDIR}"/bootstrap.sh \
		--prefix="${PREFIX}" \
		--with-libraries=all \
		--with-python-root="${PYTHON_PREFIX}" \
		|| exit 1
}

pbuild::build() {
	cd "${MODULE_SRCDIR}"
	./b2 \
		--build-type=minimal \
		--build-dir="${MODULE_BUILDDIR}" \
		--layout=system \
		--without-mpi \
		variant=release \
		link=shared,static \
		threading=multi \
		stage
}

pbuild::install() {
	cd "${MODULE_SRCDIR}"
	./b2 \
		--build-type=minimal \
		--build-dir="${MODULE_BUILDDIR}" \
		--layout=system \
		--without-mpi \
		variant=release \
		link=shared,static \
		threading=multi \
		install
}

pbuild::add_to_group 'Compiler'
pbuild::make_all

