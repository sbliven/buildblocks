#!/usr/bin/env modbuild

pbuild::set_download_url "https://netcologne.dl.sourceforge.net/project/$P/$P/$V/$P_${V_MAJOR}_${V_MINOR}_${V_PATCHLVL}.tar.gz"

BOOST_BUILD_PATH="${BUILD_DIR}"

pbuild::configure() {
	cd "${SRC_DIR}"
	"${SRC_DIR}"/bootstrap.sh \
		--prefix="${PREFIX}" \
		--with-libraries=all \
		--with-python-root="${PYTHON_PREFIX}" \
		|| exit 1
}

pbuild::compile() {
	cd "${SRC_DIR}"
	./b2 \
		--build-type=minimal \
		--build-dir="${BUILD_DIR}" \
		--layout=system \
		--without-mpi \
		variant=release \
		link=shared,static \
		threading=multi \
		stage
}

pbuild::install() {
	cd "${SRC_DIR}"
	./b2 \
		--build-type=minimal \
		--build-dir="${BUILD_DIR}" \
		--layout=system \
		--without-mpi \
		variant=release \
		link=shared,static \
		threading=multi \
		install
}

pbuild::add_to_group 'Compiler'
pbuild::make_all

