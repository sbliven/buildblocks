#!/usr/bin/env modbuild

SOURCE_URL="http://www.mpich.org/static/downloads/$V/$P-$V.tar.gz"

pbuild::configure() {
	unset F90
	"${MODULE_SRCDIR}"/configure \
		--prefix="${PREFIX}" \
		--enable-cxx \
		--enable-fortran \
		|| exit 1
}

pbuild::add_to_group 'Compiler'
pbuild::set_docfiles 'COPYRIGHT' 'README'
pbuild::make_all
