#!/usr/bin/env modbuild

pbuild::set_download_url "https://ftp.gnu.org/gnu/$P/$P-$V.tar.gz"

pbuild::add_to_group 'Compiler'
pbuild::install_docfiles \
	'AUTHORS' \
	'BUGS' \
	'COPYING' \
	'ChangeLog' \
	'INSTALL' \
	'NEWS' \
	'README' \
	'THANKS' \
	'TODO'

