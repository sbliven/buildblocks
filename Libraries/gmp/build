#!/usr/bin/env modbuild

SOURCE_URL="https://gmplib.org/download/$P/$P-$V.tar.bz2"

pbuild::configure() {
	"${SRC_DIR}"/configure \
		--prefix="${PREFIX}" \
		--disable-shared \
		|| exit 1
}

# use system gcc to compile
declare -rx CC=gcc
declare -rx CPP=/usr/bin/cpp

pbuild::add_to_group 'Libraries'
pbuild::make_all

