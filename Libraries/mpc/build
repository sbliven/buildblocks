#!/usr/bin/env modbuild

module use 'Libraries'

pbuild::set_source_url "ftp://ftp.gnu.org/gnu/${P}/${P}-${V_PKG}.tar.gz"
pbuild::add_to_group 'Libraries'
pbuild::use_cc '/usr/bin/cc'

pbuild::configure() {
	"${SRC_DIR}"/configure \
		--prefix="${PREFIX}" \
		--with-gmp=$GMP_PREFIX \
		--with-mpfr=$MPFR_PREFIX \
		--disable-shared \
		|| exit 1
}

pbuild::make_all

