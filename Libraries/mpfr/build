#!/usr/bin/env modbuild

SOURCE_URL="http://www.mpfr.org/$P-$V/$P-$V.tar.gz"

pbuild::configure() {
	"${SRC_DIR}"/configure \
		--prefix="${PREFIX}" \
		--with-gmp=$GMP_PREFIX \
		--disable-shared \
		|| exit 1
}

# use system gcc to compile
declare -rx CC=gcc

module use 'Libraries'

pbuild::add_to_group 'Libraries'
pbuild::make_all
