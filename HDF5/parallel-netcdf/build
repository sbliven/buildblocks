#!/usr/bin/env modbuild

pbuild::add_to_group 'HDF5'
pbuild::set_download_url "http://cucis.ece.northwestern.edu/projects/PnetCDF/Release/$P-$V.tar.gz"
pbuild::set_docfiles \
	AUTHORS  \
	COPYING \
	COPYRIGHT \
	CREDITS \
	ChangeLog \
	NEWS \
	RELEASE_NOTES

pbuild::configure() {
	"${SRC_DIR}"/configure \
		--prefix="${PREFIX}" \
		--with-mpi="${OPENMPI_DIR}" \
		--with-pic \
		--disable-shared \
		|| exit 1
}

pbuild::make_all

