#!/usr/bin/env modbuild

SOURCE_URL="https://sourceforge.net/projects/gnuplot/files/$P/$V/$P-$V.tar.gz"

pbuild::configure() {
	"${MODULE_SRCDIR}"/configure \
		--prefix="${PREFIX}" \
		--with-gif=no \
		--with-tiff=no \
		|| exit 1
}

pbuild::add_to_group 'Tools'
pbuild::set_docfiles 'Copyright' 'ChangeLog' 'NEWS' 'README'
pbuild::make_all

# Local Variables:
# mode: sh
# sh-basic-offset: 8
# tab-width: 8
# End:
