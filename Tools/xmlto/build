#!/usr/bin/env modbuild

pbuild::set_download_url "https://releases.pagure.org/$P/$P-${V_PKG}.tar.bz2"

module use System

pbuild::compile_in_sourcetree
pbuild::add_to_group 'Tools'
pbuild::install_docfiles	\
	AUTHORS		\
	COPYING		\
	FAQ		\
	NEWS		\
	README		\
	THANKS 

# Local Variables:
# mode: sh
# sh-basic-offset: 8
# tab-width: 8
# End:
