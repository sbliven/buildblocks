#!/usr/bin/env modbuild

# :FIXME: need review!

pbuild::configure() {
	"${SRC_DIR}"/configure \
		--prefix="${PREFIX}" \
		--with-pic=yes \
		--with-included-ltdl \
		|| exit 1
}

pbuild::add_to_group 'Tools'
pbuild::install_docfiles 'AUTHORS' 'COPYING' 'COPYING.LIB' 'LICENSE' 'README' 'THANKS'
pbuild::set_build_dependencies "gcc/4.8.3"
pbuild::make_all

# Local Variables:
# mode: sh
# sh-basic-offset: 8
# tab-width: 8
# End:
