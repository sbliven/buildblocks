#!/usr/bin/env modbuild

SOURCE_URL="https://sourceforge.net/projects/asciidoc/files/$P/$V/$P-$V.tar.gz"

pbuild::configure() {
	"${MODULE_SRCDIR}"/configure \
		--prefix="${PREFIX}" \
		|| exit 1
}

pbuild::compile_in_sourcetree
pbuild::add_to_group 'Tools'
pbuild::set_docfiles 	\
	BUGS		\
	BUGS.txt	\
	CHANGELOG	\
	CHANGELOG.txt	\
	COPYING		\
	COPYRIGHT	\
	INSTALL		\
	INSTALL.txt	\
	MANIFEST	\
	README		\
	README.txt
pbuild::make_all

# Local Variables:
# mode: sh
# sh-basic-offset: 8
# tab-width: 8
# End:
