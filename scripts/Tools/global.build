#!/bin/bash

source "$(dirname $0)/../../lib/libem.bash"

function em.configure() {
	"${MODULE_SRCDIR}"/configure \
		--prefix="${PREFIX}" \
		--with-pic=yes \
		--with-included-ltdl \
		|| exit 1
}

em.add_to_family 'Tools'
em.set_docfiles 'AUTHORS' 'COPYING' 'COPYING.LIB' 'LICENSE' 'README' 'THANKS'
em.set_build_dependencies "gcc/4.8.3"
em.make_all

