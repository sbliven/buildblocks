#!/bin/bash
#
# Lua cannot be build in a seperate directory!
#

source "$(dirname $0)/../lib/libem.bash"

function em.configure() {
        cd "${EM_SRCDIR}"
	"${EM_SRCDIR}"/configure \
		--prefix="${PREFIX}" \
		|| exit 1
}

function em.build() {
        cd "${EM_SRCDIR}"

	make -j ${JOBS}
}

em.add_to_family 'Programming'
em.set_build_dependencies "${COMPILER}"
em.make_all
em.cleanup_src
