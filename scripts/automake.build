#!/bin/bash

source "$(dirname $0)/../lib/libem.bash"

function em.configure() {
	"${EM_SRCDIR}"/configure \
		--prefix="${PREFIX}" \
		|| exit 1
}

function em.install_doc() {
	install -m 0444 \
		AUTHORS \
		COPYING \
		ChangeLog \
		HACKING \
		NEWS \
		README \
		THANKS \
 		"${DOCDIR}"
}

# use system gcc to compile
declare -rx CC=gcc

em.add_to_family 'Programming'
em.set_build_dependencies 'm4' 'autoconf'
em.make_all

