#!/bin/bash

source "$(dirname $0)/../lib/libem.bash"

function em.configure() {
	"${EM_SRCDIR}"/configure \
		--prefix="${PREFIX}" \
		--with-gif=no \
		--with-tiff=no \
		|| exit 1
}

function em.install_doc() {
	install -m 0444 \
		Copyright \
		ChangeLog \
		NEWS \
		README \
		README.1ST \
 		"${DOCDIR}"
}

em.add_to_family 'Tools'
em.set_build_dependencies "${COMPILER}"
em.make_all
