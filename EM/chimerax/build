#!/usr/bin/env modbuild

pbuild::prep() {
    # Create bin/ in the installation directory
    mkdir -p $PREFIX/bin/

    # Copy the chimerax executable script to the installation directory
    cp -n "$BUILDBLOCK_DIR/${P}" "$PREFIX/bin/"
}

pbuild::configure() {
    :
}

pbuild::compile() {
    :
}

pbuild::install() {
    :
}
